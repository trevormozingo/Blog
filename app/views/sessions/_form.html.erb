<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email %>
  	</div>

  	<div class="field">
      <%= f.label :password %> <br>
      <%= f.password_field :password %>
  	</div>

      <%= f.submit "Login", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>